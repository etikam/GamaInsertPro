 <div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s" id="contact">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-7">
                    <div class="bg-primary rounded h-100 d-flex align-items-center p-5 wow zoomIn" data-wow-delay="0.9s">
                        <form action="{{ path('app_soumettre') }}" method="POST" >
                            <div class="row g-3">
                            <h2 style="text-align:center;">Vos Informations</h2>
                                <div class="col-xl-12">
                                    <input type="text" name="nom" class="form-control bg-light border-0" placeholder="Votre nom " style="height: 55px;">
                                </div>
                                <div class="col-12">
                                    <input type="text" name="prenom" class="form-control bg-light border-0" placeholder="Votre prenom" required style="height: 55px;">
                                </div>
                                <div class="col-xl-12">
                                    <input type="email" name="email" class="form-control bg-light border-0" placeholder="Votre email" style="height: 55px;">
                                </div>
                                <div class="col-12">
                                    <input type="text" name="nomEntreprise" class="form-control bg-light border-0" placeholder="Votre nom d'Entreprise" style="height: 55px;">
                                </div>
                                <div class="col-xl-12">
                                    <input type="text" name="telephone" class="form-control bg-light border-0" placeholder="Votre numéro de telephone" style="height: 55px;">
                                </div>
                                <hr>
                                <h2 style="text-align:center;">Détails de l'offre</h2>
                                <div class="col-12">
                                    <select name="typeOffre" class="form-select bg-light border-0" style="height: 55px;">
                                        {% for offre in typeOffres %}
                                            <option value="{{ offre.id }}">{{ offre.nom }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-12">
                                    <textarea name="description" class="form-control bg-light border-0" rows="6" placeholder="Votre Description"></textarea>
                                </div>
                                <div class="col-12">
                                    <input type="date" name="dateCloture" class="form-control bg-light border-0" placeholder="Date limite" style="height: 55px;">
                                </div>
                                <hr>
                                <h2 style="text-align:center;">Profil Recherché</h2>
                                <div class="col-12">
                                    <select name="taille" class="form-select bg-light border-0" style="height: 55px;">
                                        <option value="Petite Entreprise">Petite entreprise</option>
                                        <option value="Moyenne Entreprise">Moyenne entreprise</option>
                                        <option value="Grande Entreprise">Grande entreprise</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <input type="text" name="secteur" class="form-control bg-light border-0" placeholder="Domaine d'Activité" style="height: 55px;">
                                </div>
                                <div class="col-xl-12">
                                    <input type="text" name="lieu" class="form-control bg-light border-0" placeholder="Lieu : 'Quartier/Préfecture/Ville'" style="height: 55px;">
                                </div>
                                <div class="col-12">
                                    <input type="text" name="experience" class="form-control bg-light border-0" placeholder="Expérience Demandée" style="height: 55px;">
                                </div>
                                <div class="col-12">
                                    <input type="text" name="competence" class="form-control bg-light border-0" placeholder="Compétence Demandée" style="height: 55px;">
                                </div>
                                <div class="col-12">
                                    <input type="date" name="dateDepot" class="form-control bg-light border-0" placeholder="Date limite" style="height: 55px;">
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-dark w-100 py-3" type="submit">Soumettre l'Offre</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>