    <!DOCTYPE html>
    <html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>Authentification</title>
        <link rel="stylesheet" href="{{ asset('auth/css/style.css') }}">
        <link rel="stylesheet" type="text/css" href="slide navbar style.css">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
        <style>
            .alert {
                position: relative;
                padding: 1rem 1rem;
                margin-bottom: 1rem;
                border: 1px solid transparent;
                border-radius: 2px;
                text-align: center;
            }
            .alert-danger {
                color: #962f37;
                background-color: #f5a9af;
                border-color: #f1959e
            }
            .btn {
                display: inline-block;
                font-weight: 400;
                line-height: 1.5;
                color: #ffffff;
                text-align: center;
                vertical-align: middle;
                cursor: pointer;
                user-select: none;
                background-color: transparent;
                border: 1px solid transparent;
                padding: .375rem .75rem;
                font-size: 1rem;
                border-radius: 2px;
                margin:auto;
                transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out
            }
            
            @media (prefers-reduced-motion: reduce) {
                .btn {
                    transition: none
                }
            }
            
            .btn:hover {
                color: #e7e6f1
            }
            .btn-danger {
                color: #fff;
                background-color: #dc3545;
                border-color: #dc3545;
                
            }
        </style>
    </head>
    <body>
        <div class="main">
            <input type="checkbox" id="chk" aria-hidden="true">
             {% if app.session.flashbag.has('etudiant_not_existe') %}
            <div class="alert alert-danger">
                {{ app.session.flashbag.get('etudiant_not_existe')[0] }}
            </div>
            {% endif %}
            <a href="{{path('app_auth_etudiant')}}" style="color: white;font-weight:700 ; margin:40px"><i class="fas fa-arrow-left"></i>Retour</a>
            <div class="signup">
              <form action="" method="post">
                        {{ form_start(checkform) }}
                        <label for="" >Verification</label>
                        {{ form_widget(checkform.matricule, {'attr': {'placeholder': 'Matricule', 'required': 'required'}}) }}
                        {{ form_widget(checkform.prenom, {'attr': {'placeholder': 'Prenom', 'required': 'required'}}) }}
                        {{ form_widget(checkform.nom, {'attr': {'placeholder': 'Nom', 'required': 'required'}}) }}
                        <button type="submit">Verifier</button>

                    {{ form_end(checkform) }}
                </form>
                <div style="display:flex">
                     <!-- <a href="{{path('app_auth_etudiant')}}" class="btn btn-danger">Retour</a> -->
                     
                </div>
            </div>
            
        </div>
    </body>
    </html>
