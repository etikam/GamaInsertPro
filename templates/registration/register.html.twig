{% extends 'base.html.twig' %}

{% block title %}Administration!{% endblock %}

{% block body %}
<div class="bg-gradient-warning">
    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image">
                                <img src="{{ asset('img/uganc.jpeg') }}" alt="" width="100%" height="100%">
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Connexion à GamalInsert </h1>
                                    </div>
                                    {{ form_start(registrationForm) }}
                                        {{ form_row(registrationForm.username, {'label': false, 'attr': {'class': 'form-control form-control-user m-3', 'placeholder': 'Enter your Matricule', 'autocomplete': 'username', 'required': 'required', 'autofocus': 'autofocus'}}) }}
                                        {{ form_row(registrationForm.email, {'label': false, 'attr': {'class': 'form-control form-control-user m-3', 'placeholder': 'Enter your Email', 'required': 'required'}}) }}
                                        {{ form_row(registrationForm.plainPassword, {'label': false, 'attr': {'class': 'form-control form-control-user m-3', 'placeholder': 'Enter your Password', 'autocomplete': 'new-password', 'required': 'required'}}) }}
                                        {{ form_row(registrationForm.confirmPassword, {'label': false, 'attr': {'class': 'form-control form-control-user m-3', 'placeholder': 'Confirm Password', 'autocomplete': 'new-password', 'required': 'required'}}) }}

                                        {{ form_row(registrationForm.agreeTerms) }}

                                        <button type="submit" class="btn btn-primary btn-user btn-block">Register</button>
                                    {{ form_end(registrationForm) }}
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password.html">Mot de passe oublié?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="{{ path('app_login') }}">Déjà inscrit? Connectez-vous!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
</div>
{% endblock %}

 
